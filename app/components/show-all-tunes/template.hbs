<hbox class="{{styles.toggle}}">
  <centered {{action "toggleTunes"}}>
    {{if showTunes "Hide tunes" "Show all tunes"}}
  </centered>
</hbox>

{{#if showTunes}}
  <vbox class="{{styles.tunes}} tunes">
    {{#each tunes as |tune|}}
      {{listed-tune
        tagName="hbox"
        id=(concat "tune" tune.id)
        class=(concat (if (eq tune currentTune) styles.current-tune) " " styles.tune)
        tune=tune
        click=(action chooseTune tune)
      }}
    {{/each}}
  </vbox>
{{/if}}
