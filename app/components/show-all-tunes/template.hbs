<hbox class="{{styles.toggle}}">
  <centered {{action "toggleTunes"}}>
    {{if showTunes "Hide tunes" "Show all tunes"}}
  </centered>
</hbox>

{{#if showTunes}}
  <vbox class="{{styles.tunes}} tunes">
    {{#each tunes as |tune|}}
      <hbox id="{{concat 'tune' tune.id}}" class="{{if (eq tune currentTune) styles.current-tune}} {{styles.tune}}" {{action chooseTune tune}}>
        <box xs="8">{{tune.name}}</box>
        <box xs="2" align="center">{{tune.key}}</box>
        <box xs="2" align="center">{{tune.timeSignature}}</box>
      </hbox>
    {{/each}}
  </vbox>
{{/if}}
